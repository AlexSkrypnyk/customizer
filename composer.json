{
    "name": "alexskrypnyk/customizer",
    "description": "Customize the project based on the answers provided by the user.",
    "license": "GPL-2.0-or-later",
    "type": "project",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "customizer@drevops.com",
            "homepage": "https://alexskrypnyk.com",
            "role": "Maintainer"
        }
    ],
    "homepage": "https://github.com/alexskrypnyk/customizer",
    "support": {
        "issues": "https://github.com/alexskrypnyk/customizer/issues",
        "source": "https://github.com/alexskrypnyk/customizer"
    },
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "composer/composer": "^2.7",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "drupal/coder": "^8.3",
        "ergebnis/composer-normalize": "^2.42",
        "helmich/phpunit-json-assert": "^3.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^11.1",
        "rector/rector": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "YourOrg\\YourPackage\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AlexSkrypnyk\\Customizer\\Tests\\": "tests/phpunit"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "phpcs",
            "phpmd --exclude vendor,vendor-bin,node_modules . text phpmd.xml",
            "phpstan",
            "rector --clear-cache --dry-run"
        ],
        "lint-fix": [
            "rector --clear-cache",
            "phpcbf"
        ],
        "test": "phpunit --no-coverage",
        "test-coverage": "phpunit",
        "docs": "php docs.php",
        "docs-lint": "php docs.php --fail-on-change"
    }
}
